<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textRequisicaoNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:text="Lucas da Costa"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textRequisicaoDistancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"

        android:text="0 km - aproximadamente"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/perfilRequisicoesIcon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="-40dp"
        app:srcCompat="@drawable/logooficialinicial" />

</LinearLayout>